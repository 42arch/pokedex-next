generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ability {
  id                   Int     @id @default(autoincrement())
  name                 String @unique
  name_local           String?
  name_en              String?
  flavor_texts_local   String?
  flavor_texts_en      String?
  effect_entries_local String?
  effect_entries_en    String?
  is_main_series       Int?
  generation           String?
  pokemon              String?
}

model evolution_chain {
  id                 Int     @id @default(autoincrement())
  evolution_chain_id Int    @unique
  baby_trigger_item  String?
  chain              String?
}

model item {
  id                   Int     @id @default(autoincrement())
  name                 String @unique
  name_local           String?
  name_en              String?
  cost                 Int?
  fling_power          Int?
  fling_effect         String?
  category             String?
  attributes           String?
  sprites              String?
  flavor_texts_local   String?
  flavor_texts_en      String?
  effect_entries_local String?
  effect_entries_en    String?
  game_index           String?
  held_by_pokemon      String?
  baby_trigger_for     Int?
}

model move {
  id                   Int     @id @default(autoincrement())
  name                 String @unique
  name_local           String?
  name_en              String?
  accuracy             Int?
  effect_chance        Int?
  pp                   Int?
  priority             Int?
  power                Int?
  contest_combos       String?
  contest_effect       Int?
  contest_type         String?
  damage_class         String?
  effect_entries_local String?
  effect_entries_en    String?
  type                 String?
  target               String?
  generation           String?
  meta                 String?
  machines             String?
  flavor_texts_local   String?
  flavor_texts_en      String?
  learned_by_pokemon   String?
}

model pokemon {
  id              Int      @id @default(autoincrement())
  name            String  @unique
  base_experience Int?
  height          Int?
  weight          Int?
  species         String?
  is_default      Boolean?
  abilities       String?
  types           String?
  forms           String?
  stats           String?
  game_indices    String?
  held_items      String?
  cries           String?
  sprites         String?
  moves           String?
}

model pokemon_form {
  id              Int     @id @default(autoincrement())
  name            String  @unique
  name_local      String?
  name_en         String?
  form_name       String?
  form_name_local String?
  form_name_en    String?
  form_order      Int?
  is_default      Int?
  is_battle_only  Int?
  is_mega         Int?
  pokemon         String?
  types           String?
  version_group   String?
  sprites        String?
}

model species {
  id                     Int      @id @default(autoincrement())
  name                   String  @unique
  name_local             String?
  name_en                String?
  name_jp                String?
  genus_local            String?
  genus_en               String?
  color                  String?
  shape                  String?
  forms_switchable       Boolean?
  generation             String?
  growth_rate            String?
  habitat                String?
  has_gender_differences Boolean?
  hatch_counter          Int?
  is_baby                Boolean?
  is_legendary           Boolean?
  is_mythical            Boolean?
  base_happiness         Int?
  capture_rate           Int?
  gender_rate            Int?
  sprite_default         String?
  sprite_home            String?
  egg_groups             String?
  flavor_texts_local     String?
  flavor_texts_en        String?
  pal_park_encounters    String?
  pokedex_numbers        String?
  varieties              String?
  evolution_chain_id     Int?
}
